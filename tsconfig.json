
{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
